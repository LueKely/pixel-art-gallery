---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Navbar from "@components/navbar.astro";
import Header from "@components/header.astro";
import Title from "@components/Title.astro";
import Time from "@components/Time.astro"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet"> 
		<title>Pixel Art Gallery</title>
	</head>

	<body>
	<Navbar></Navbar>
	<div class="main-container">
	<Header></Header>
	<Title name={title}></Title>
		<slot/>
	<Time></Time>
	</div>
		
	</body>
</html>
<style is:global>
	:root {
	/* color */
	--background-color: #032681;
	--border-color: rgba(255, 255, 255, 0.904);
	--crt-color-left:rgba(96, 222, 231, 0.822);
	--crt-color-right:rgba(239, 131, 235, 0.822);

	/* sizes  */
	--border-width: 2px;
	--block-height: 80px;
	--shadow-position: 2px;
	--shadow-position-opposite: -2px;
	--shadow-blur: 2px;
	--section-size: 60px;
}
	html {
		font-family: system-ui, sans-serif;

	}

	html::before
{
	content: "";
	display: block;
	position: fixed;
	left: 0;
	top: 0;
	width: calc(100% + 32px);
	height: calc(100% + 32px);
	background-image: url("../assets/scanlines.png");
	background-position: 0 0;
	background-repeat: repeat;
	z-index: 10000000;
	animation: ScanlineAnimationLeft 2s linear infinite;
	pointer-events: none;
	opacity: 0.9;
}

html::after
{
	content: "";
	display: block;
	position: fixed;
	left: -32px;
	top: 0;
	width: calc(100% + 32px);
	height: calc(100% + 32px);
	background-image: url("../assets/scanlines.png");
	background-position: 0 0;
	background-repeat: repeat;
	z-index: 10000000;
	animation: ScanlineAnimationRight 0.4s linear infinite;
	pointer-events: none;
	opacity: 0.9;
}

	*{
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body{
		background-color: var(--background-color);

		display: flex;
		align-items: center;
		justify-content: center;

		box-shadow: inset 0px 0px 20px 20px rgba(0, 0, 0, 0.3);
	}

	.main-container{
		width: 100%;
		height: 100dvh;
		display: flex;
		align-items: flex-start;
		justify-content: flex-start;
		flex-direction: column;

	
	}

	h1,h2,p,a{
		font-family: 'VT323', monospace;
		color: var(--border-color);
		text-shadow: var(--crt-color-right) -2px 0,var(--crt-color-left) 2px 0; 
 		animation: anaglyph 100ms ease 1s infinite normal none ;
	}



	h1{
		font-size: 4rem;
	}

	h2{
		font-size: 2.5rem;
	}

	p{
		font-size: clamp(1rem, 2vw, 2.5rem);
	}


	a{
		font-size: 2rem;
	}






	@keyframes anaglyph {
		0%{
			text-shadow: var(--crt-color-right) -3px 0,var(--crt-color-left) 3px 0; 
		}
		100%{
			text-shadow: var(--crt-color-right) -2px 0,var(--crt-color-left) 2px 0; 
		}
	}





	@keyframes ScanlineAnimationLeft
{
	0% {
		transform: translateX(0px) translateY(0px);
	}
	100% {
		transform: translateX(-32px) translateY(-32px);
	}
}

@keyframes ScanlineAnimationRight
{
	0% {
		transform: translateX(0px) translateY(0px);
	}
	100% {
		transform: translateX(32px) translateY(-32px);
	}
}
  
</style>
